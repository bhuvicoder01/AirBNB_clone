{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {"distDir": "dist"}
    }
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/api/index.js"},
    {"src": "/(.*)", "dest": "/index.html"}
  ],
  "env": {
    "VITE_API_URL": "https://your-backend-url.vercel.app",
    "VITE_STRIPE_PUBLIC_KEY": "pk_test_YOUR_STRIPE_KEY",
    "VITE_GOOGLE_MAPS_KEY": "YOUR_GOOGLE_MAPS_KEY"
  }
}